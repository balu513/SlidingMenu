<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="200dp"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="200dp"
        android:src="@drawable/profile" />

    <RelativeLayout
        android:id="@+id/rlout_profile"
        android:layout_width="wrap_content"
        android:background="#ff40c1ca"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_profileimg"
            android:layout_width="@dimen/iv_width_height"
            android:layout_height="@dimen/iv_width_height"
            android:padding="@dimen/textpad"
            android:src="@drawable/profileone" />


        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/iv_profileimg"
            android:textSize="20dp"
            android:ems="9"
            android:textColor="@android:color/black"
            android:text="Profile" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlout_payslips"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:background="#ff7598ee"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_viewpayslip"
            android:layout_width="@dimen/iv_width_height"
            android:layout_height="@dimen/iv_width_height"
            android:padding="@dimen/textpad"
            android:src="@drawable/viewpay" />

        <TextView
            android:id="@+id/tv_viewprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/iv_viewpayslip"
            android:textSize="20dp"
            android:ems="4"
            android:text="Payslips" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlout_changepwd"
        android:layout_width="wrap_content"
        android:background="#ffa5695b"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_changepwd"
            android:layout_width="@dimen/iv_width_height"
            android:layout_height="@dimen/iv_width_height"
            android:padding="@dimen/textpad"
            android:src="@drawable/profileone" />


        <TextView
            android:id="@+id/tv_chnagepwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/iv_changepwd"
            android:textSize="20dp"
            android:ems="8"
            android:textColor="@android:color/black"
            android:text="Change password" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlout_logout"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:background="#ff91b593"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="@dimen/iv_width_height"
            android:layout_height="@dimen/iv_width_height"
            android:padding="@dimen/textpad"
            android:src="@drawable/logout" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/iv_logout"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:ems="6"


            android:text="Logout" />
    </RelativeLayout>

</LinearLayout>